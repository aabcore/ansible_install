[Unit]
Description={{ item.shortName }} Container
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
Restart=always
ExecStartPre=-/usr/bin/docker stop %n
ExecStartPre=-/usr/bin/docker rm %n
ExecStartPre=/usr/bin/docker pull {{ item.fullName}}:{{ item.tag }}
ExecStart=/usr/bin/docker run --rm --name %n {{ item.fullName}}:{{ item.tag }}

[Install]
WantedBy=multi-user.target