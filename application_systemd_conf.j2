[Unit]
Description={{ item.shortName }} Container
After=docker.service
After={{nginx_proxy.shortName}}.service
After={{letsencrypt_nginx_proxy_companion.shortName}}.service
Requires=docker.service
Requires=docker.{{nginx_proxy.shortName}}.service
Requires=docker.{{letsencrypt_nginx_proxy_companion.shortName}}.service

[Service]
TimeoutStartSec=infinity
Restart=always
ExecStartPre=-/usr/bin/docker stop %n
ExecStartPre=-/usr/bin/docker rm %n
ExecStartPre=/usr/bin/docker pull {{ item.fullName}}:{{ item.tag }}
ExecStart=/usr/bin/docker run --rm --name %n \
    --env "VIRTUAL_HOST={{ item.shortName }}.hutsonapps.com" \
    --env "LETSENCRYPT_HOST={{ item.shortName }}.hutsonapps.com" \
    {{ item.fullName}}:{{ item.tag }}

[Install]
WantedBy=multi-user.target