[Unit]
Description=nginx Container
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
Restart=always
ExecStartPre=-/usr/bin/docker stop %n
ExecStartPre=-/usr/bin/docker rm %n
ExecStartPre=/usr/bin/docker pull nginx:{{ nginx.tag }}
ExecStart=/usr/bin/docker run --rm --name %n -p 80:80 -p 443:443 -v /etc/nginx/conf.d:/etc/nginx/conf.d nginx:{{ nginx.tag }}

[Install]
WantedBy=multi-user.target